<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7DC8FF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rec0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/white_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="117.5dp"
        android:layout_marginTop="80dp"
        />

    <ImageView
        android:id="@+id/rec1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/white_rectangle"
        app:layout_constraintTop_toTopOf="@id/rec0"
        app:layout_constraintLeft_toRightOf="@id/rec0"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/rec2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/white_rectangle"
        app:layout_constraintTop_toBottomOf="@id/rec0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="117.5dp"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/rec3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/white_blue_rectangle"
        app:layout_constraintTop_toTopOf="@id/rec2"
        app:layout_constraintLeft_toRightOf="@id/rec2"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/text0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:textAlignment="center"
        android:text="@string/are_you_smarter_nthan_a_chimpanzee"
        android:textColor="@color/white"
        android:typeface="monospace"
        android:textStyle="bold"
        app:layout_goneMarginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/rec3"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="@string/click_the_square_in_order_according_to_their_numbers_nthe_test_will_get_progressively_harder"
        android:textColor="@color/white"
        android:typeface="monospace"
        android:textStyle="bold"
        app:layout_goneMarginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/text0"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/start_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="@string/start_test"
        android:backgroundTint="#FFC300"
        android:textColor="@color/white"
        android:typeface="monospace"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="127dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
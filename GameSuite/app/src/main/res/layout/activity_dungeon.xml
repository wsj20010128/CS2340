<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dungeonbackground"
    android:orientation="vertical"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".dungeon.Dungeon">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null">

        <Button
            android:id="@+id/gameDungeon_button_character_selection_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_white"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry" />

        <com.example.gamesuite.dungeon.MyView
            android:id="@+id/gameDungeon_view_chess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
        </com.example.gamesuite.dungeon.MyView>

        <ImageView
            android:id="@+id/character_button1"
            android:layout_width="120dp"
            android:layout_height="167.55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/character1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="167.55dp"
            android:layout_marginStart="590dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/character2" />

        <ImageButton
            android:id="@+id/skill_button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="260dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/game03_chess01" >
        </ImageButton>

        <ImageButton
            android:id="@+id/skill_button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="615dp"
            android:layout_marginTop="260dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/game03_chess02">
        </ImageButton>

    </RelativeLayout>
</ScrollView>